{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["env.d.ts", "App.tsx", "index.ts", "src/**/*", "tests/**/*"]
}