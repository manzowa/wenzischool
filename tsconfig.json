{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@images/*": ["assets/images/*"]
    }
  },
  "include": ["App.tsx", "index.ts", "src/**/*", "tests/**/*"]
}